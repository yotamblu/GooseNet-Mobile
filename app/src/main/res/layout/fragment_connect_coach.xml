<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/enterCoachIdLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- Inner container to center everything -->
    <LinearLayout
        android:id="@+id/centerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Coach ID"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:gravity="center" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paste the code your coach shared with you"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:gravity="center" />

        <!-- Input Field -->


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/coachIdInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/blue"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/coachIdEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Coach ID"
                android:inputType="text"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Submit Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmitCoachId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect to Coach"
            app:backgroundTint="@color/blue"
            android:textColor="@android:color/white"
            app:cornerRadius="16dp"
            app:elevation="4dp"
            android:layout_marginTop="32dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
