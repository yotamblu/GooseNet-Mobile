<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white"
    >

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Workout Date -->
        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />

        <!-- Workout Name -->
        <TextView
            android:id="@+id/textViewWorkoutName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <!-- Workout Description -->
        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#444444"
            android:layout_marginBottom="16dp" />

        <!-- Coach Info Row -->
        <LinearLayout
            android:id="@+id/coachInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewCoach"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_profile"
                android:layout_marginEnd="12dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textViewCoachName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/blue" />
        </LinearLayout>

        <!-- Lap Chart -->

        <!-- Textual Workout Details -->
        <com.example.goosenetmobile.CustomLapChartView
            android:id="@+id/lapChartView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/textViewWorkoutDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/blue_dark"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp"
            android:textStyle="bold"
            />
    </LinearLayout>
</ScrollView>
