<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/connectToAthleteLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Connect to Athlete"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Share your Coach ID to connect with athletes"
        android:textColor="#666666"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Divider -->
    <View
        android:id="@+id/view"
        android:layout_width="64dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitle" />

    <!-- Coach Avatar (optional) -->

    <!-- Coach ID Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/coachIdCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <TextView
            android:id="@+id/coachIdText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/coach_id_gradient"
            android:gravity="center"
            android:padding="20dp"
            android:text="Fetching your coach Id..."
            android:textColor="#333333"
            android:textSize="18sp" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Copy Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCopyCoachId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Copy ID to Clipboard"
        app:icon="@drawable/ic_copy"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:strokeColor="@color/blue"
        app:strokeWidth="2dp"
        android:textColor="@color/white"
        app:cornerRadius="16dp"
        app:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/coachIdCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- WhatsApp Share Button -->
    <com.google.android.material.button.MaterialButton
        app:iconSize="24dp"

        android:id="@+id/btnShareOnWhatsApp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Send via WhatsApp"
        app:icon="@drawable/whatsapp"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:backgroundTint="@color/blue"
        app:cornerRadius="16dp"
        app:elevation="4dp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/btnCopyCoachId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
