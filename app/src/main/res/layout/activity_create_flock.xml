<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/colorBackground"
    tools:context=".CreateFlockActivity">

    <!-- Content Container (Centered Vertically) -->
    <LinearLayout
        android:id="@+id/formContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create a New Flock"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextDark"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Give your flock a unique name."
            android:textSize="16sp"
            android:textColor="@color/colorTextDark"
            android:layout_marginBottom="32dp" />

        <!-- Input Field -->


        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/flockNameInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            android:layout_marginBottom="20dp"
            app:boxStrokeColor="@color/blue"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/flockNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unique Flock Name"
                android:inputType="text"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>




        <!-- Submit Button -->
        <com.google.android.material.button.MaterialButton
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/createFlockSubmitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Flock"
            android:textAllCaps="false"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
